<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/action_panel/action_panel.css" />
		<include src="file://{resources}/styles/custom_game/action_panel/portrait.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/action_panel/portrait.js" />		
	</scripts>		
	<Panel>
		<Button id="LevelUpButton" onactivate="OnLevelUpClicked()">
			<Panel id="LevelUpButtonInset">
				<Label text="#LevelUp" />
			</Panel>
		</Button>
		<Panel hittest="false" class="SkinPanel" id="PortraitBackground"/>		
		<Label class="PortraitLabel" id="HeroName" text="" />
		<Label class="PortraitLabel" id="HeroLevel" text="0" />
		<DOTAScenePanel class="StandartPanel" id="PortraitModel" map="scenes/loadout_preview_rays" camera="point_camera" hittest="false" /> 
		<Label class="PortraitLabel" id="ExperienceCount" text="0/0" />
		<Panel class="Bar" id="ExperienceBack" >
			<Panel class="Bar" id="Experience" />
		</Panel>
	</Panel>
</root>

