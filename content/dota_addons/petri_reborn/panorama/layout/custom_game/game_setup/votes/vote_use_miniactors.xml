<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/material_design.css" />	
		<include src="file://{resources}/styles/custom_game/game_setup.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/game_setup/game_setup_vote_utils.js" />
	</scripts>
	<Panel hittest="false" class="VoteContainer">
		<Panel id="VoteHeader" >
			<Label class="VoteQuestionLabel" text="#vote_use_miniactors_q" />			
		</Panel>
		<Panel class="Paper" id="VoteVariants" param="use_miniactors">
			<Button class="FlatButton" value="true" default="true">
				<Label class="FlatLabel" text="#vote_use_miniactors_use" />
			</Button>
			<Button class="FlatButton" value="false">
				<Label class="FlatLabel" text="#vote_use_miniactors_not_use" />
			</Button>
		</Panel>
	</Panel>
</root>

